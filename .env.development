# ============================================
# VARIABLES DE ENTORNO - DESARROLLO LOCAL
# Este archivo es para desarrollo y NO debe usarse en producción
# ============================================

# ============================================
# ENTORNO
# ============================================
APP_ENV=development
DEBUG=True

# ============================================
# BASE DE DATOS - PostgreSQL
# ============================================
DATABASE_URL=postgresql://gestion_camas:dev_password_123@localhost:5432/gestion_camas_db

# Pool de conexiones (reducido para desarrollo)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=True
DB_ECHO=True  # Ver queries SQL en desarrollo

# Credenciales PostgreSQL
POSTGRES_USER=gestion_camas
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=gestion_camas_db
POSTGRES_PORT=5432

# ============================================
# REDIS - Caché
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=60  # Cache más corto en desarrollo
REDIS_ENABLED=False  # Opcional en desarrollo
REDIS_PORT=6379

# ============================================
# SEGURIDAD - JWT
# ============================================
JWT_SECRET_KEY=dev-secret-key-not-for-production-12345
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 horas en desarrollo
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30  # 30 días en desarrollo

# ============================================
# CORS - Permitir todo en desarrollo
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ============================================
# MULTI-TENANCY
# ============================================
ENABLE_MULTI_TENANCY=True

# ============================================
# API GATEWAY
# ============================================
INTERNAL_API_KEYS=dev-api-key-1,dev-api-key-2

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=False  # Deshabilitado en desarrollo
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_LOGIN_PER_MINUTE=100

# ============================================
# DOCKER
# ============================================
FRONTEND_PORT=5173
BACKEND_PORT=8000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# ============================================
# PGADMIN
# ============================================
PGADMIN_EMAIL=admin@dev.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=DEBUG
